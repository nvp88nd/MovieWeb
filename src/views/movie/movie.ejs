<div class="container py-4">
    <h2>
        <%= movie.title %>
    </h2>
    <p class="text-muted">
        <%= movie.origin_name %> | <%= movie.status %>
    </p>

    <div class="ratio ratio-16x9 mb-4">
        <iframe src="<%= currentEpisode.video_url %>" allowfullscreen></iframe>
    </div>

    <div class="mb-3">
        <h5>Tập hiện tại: <%= currentEpisode.episode_name %>
        </h5>
        <div class="d-flex flex-wrap gap-2 mt-2">
            <% episodes.forEach(ep=> { %>
                <a href="/movie/<%= movie.slug %>/<%= ep.episode_name.replace('Tập ', '') %>"
                    class="btn btn-sm <%= ep.episode_name === currentEpisode.episode_name ? 'btn-success' : 'btn-secondary' %>"
                    style="width: 60px;">
                    <%= ep.episode_name %>
                </a>
                <% }) %>
        </div>
    </div>

    <div class="mt-4">
        <div class="my-4">
            <h5><i class="bi bi-chat-left-text" data-movie-id="<%= movie.id %>"></i> Bình luận</h5>
            <% if (!user) { %>
                <div class="alert alert-warning">Đăng nhập để bình luận</div>
                <% } else { %>
                    <form method="POST" action="/comments" id="cmtForm">
                        <input type="hidden" name="movie_id" value="<%= movie.id %>">
                        <textarea id="cmtContent" class="form-control mb-2" name="content" rows="2" required></textarea>
                        <button type="submit" class="btn btn-primary">Gửi bình luận</button>
                    </form>
                    <% } %>

                        <div class="mt-3" id="comments"></div>
                        <button class="btn btn-primary w-100" id="loadComments">Xem thêm bình luận</button>
        </div>
    </div>
</div>

<script src="/js/movieInfo.js"></script>