<div class="container my-4 text-white">
    <div class="bg-dark p-3 mb-3 text-center fs-4 fw-bold">
        <%= movie.title %>
    </div>

    <div class="row g-3">
        <div class="col-md-3 text-center">
            <img src="<%= movie.thumb_url %>" class="img-fluid rounded" alt="<%= movie.title %>">
        </div>
        <div class="col-md-9">
            <table class="table table-dark table-bordered mb-0">
                <tbody>
                    <tr>
                        <th>Tên khác</th>
                        <td>
                            <%= movie.origin_name %> (<%= movie.year %>)
                        </td>
                    </tr>
                    <tr>
                        <th>Thể loại</th>
                        <td>
                            <% movie.Genres.forEach(g=> { %>
                                <span class="badge bg-secondary me-1">
                                    <%= g.name %>
                                </span>
                                <% }); %>
                        </td>
                    </tr>
                    <tr>
                        <th>Trạng thái</th>
                        <td>
                            <%= movie.status==='ongoing' ? 'Đang tiến hành' : 'Đã hoàn thành' %>
                        </td>
                    </tr>
                    <tr>
                        <th>Điểm</th>
                        <td>8.8</td>
                    </tr>
                    <tr>
                        <th>Phát hành</th>
                        <td>
                            <%= movie.year %>
                        </td>
                    </tr>
                    <tr>
                        <th>Thời lượng</th>
                        <td>
                            <%= episodes.length %> Tập
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex align-items-center my-3">
        <a href="/movie/<%= movie.slug %>/1" class="btn btn-success me-2">
            <i class="fa fa-play"></i> Xem phim
        </a>
        <a href="#" class="btn btn-outline-warning save-movie-btn" data-movie-id="<%= movie.id %>">
            <% if (isSaved) { %>
                <i class="fas fa-bookmark"></i>
                <% } else { %>
                    <i class="far fa-bookmark"></i>
                    <% } %>
        </a>

    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <h5>Danh sách tập</h5>
            <div class="d-flex flex-wrap bg-dark p-2 overflow-auto" style="max-height: 200px;">
                <% episodes.slice().reverse().forEach(ep=> { %>
                    <a href="/movie/<%= movie.slug %>/<%= ep.episode_name %>"
                        class="btn btn-sm text-white border border-secondary col-3">
                        <%= ep.episode_name %>
                    </a>
                    <% }) %>
            </div>
        </div>
        <div class="col-md-8">
            <h5>Nội dung</h5>
            <div class="bg-dark px-3 rounded" style="white-space: pre-wrap;">
                <%- movie.description %>
            </div>
        </div>
    </div>

    <div class="my-4">
        <h5><i class="bi bi-chat-left-text" data-movie-id="<%= movie.id %>"></i> Bình luận</h5>
        <% if (!user) { %>
            <div class="alert alert-warning">Đăng nhập để bình luận</div>
            <% } else { %>
                <form method="POST" action="/comments" id="cmtForm" data-movie-id="<%= movie.id %>">
                    <textarea id="cmtContent" class="form-control mb-2" name="content" rows="2" required></textarea>
                    <button type="submit" class="btn btn-primary">Gửi bình luận</button>
                </form>
                <% } %>

                    <div class="mt-3" id="comments"></div>
                    <button class="btn btn-primary w-100" id="loadComments">Xem thêm bình luận</button>
    </div>
</div>

<script src="/js/movieInfo.js"></script>