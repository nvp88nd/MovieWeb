<form action="/admin/country/edit/<%= country.id %>" method="POST">
    <%- include('../partials/messages') %>
        <div class="mb-3">
            <label for="name" class="form-label">Tên quốc gia</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= country.name %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Chỉnh sửa quốc gia</button>
        <a href="/admin/countries" class="btn btn-secondary">Quay lại</a>
</form>