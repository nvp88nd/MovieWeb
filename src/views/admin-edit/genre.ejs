<form action="/admin/genre/edit/<%= genre.id %>" method="POST">
    <%- include('../partials/messages') %>
        <div class="mb-3">
            <label for="name" class="form-label">Tên thể loại</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= genre.name %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Chỉnh sửa thể loại</button>
        <a href="/admin/genres" class="btn btn-secondary">Quay lại</a>
</form>