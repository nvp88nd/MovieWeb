<h1 class="mb-4">Thống kê nhanh</h1>
<div class="row g-4">
    <div class="col-md-3">
        <a href="/admin/users" class="card text-white bg-info text-decoration-none">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <i class="fa fa-user fa-2x"></i>
                    <span class="fs-2">
                        <%= userCount %>
                    </span>
                </div>
                <p class="mb-0">Người dùng</p>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="/admin/genres" class="card text-white bg-danger text-decoration-none">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <i class="fa fa-film fa-2x"></i>
                    <span class="fs-2">
                        <%= categoryCount %>
                    </span>
                </div>
                <p class="mb-0">Thể loại phim</p>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="/admin/countries" class="card text-white bg-primary text-decoration-none">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <i class="fa fa-globe fa-2x"></i>
                    <span class="fs-2">
                        <%= countryCount %>
                    </span>
                </div>
                <p class="mb-0">Quốc gia phim</p>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="/admin/movies" class="card text-white bg-warning text-decoration-none">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <i class="fa fa-video fa-2x"></i>
                    <span class="fs-2">
                        <%= movieCount %>
                    </span>
                </div>
                <p class="mb-0">Phim</p>
            </div>
        </a>
    </div>
</div>