<div class="mx-auto" style="max-width: 700px;">
    <div class="card-body">
        <h3 class="card-title mb-4">Hồ sơ cá nhân</h3>

        <% if (user) { %>
            <div class="row">
                <div class="col-md-4 text-center">
                    <% if (user.avatar_url) { %>
                        <img src="<%= user.avatar_url %>" alt="Avatar" class="img-thumbnail" width="150">
                        <% } else { %>
                            <img src="https://via.placeholder.com/150?text=No+Avatar" class="img-thumbnail">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <p><strong>Tên:</strong>
                        <%= user.username %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= user.email %>
                    </p>
                    <p><strong>Vai trò:</strong> <span class="badge bg-secondary">
                            <%= user.role %>
                        </span></p>
                    <p><strong>Ngày tạo:</strong>
                        <%= new Date(user.created_at).toLocaleDateString() %>
                    </p>
                </div>
            </div>
            <% } else { %>
                <div class="alert alert-warning">Bạn chưa đăng nhập.</div>
                <% } %>
    </div>
</div>